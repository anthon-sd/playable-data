---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Playable Data Blog">
  <div class="container-custom py-20 text-center">
    <h1 class="text-6xl font-bold text-primary mb-6">404</h1>
    <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
    <p class="text-xl text-dark-2 mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="btn btn-primary inline-flex items-center justify-center px-6 py-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Home
    </a>
  </div>
</Layout>