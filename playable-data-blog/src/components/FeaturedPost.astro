---
import { formatDate } from '../utils/date';

const { post } = Astro.props;
const { slug, data } = post;
const { title, description, pubDate, coverImage, author, tags } = data;
---

<article class="card card-hover relative overflow-hidden">
  <div class="md:flex">
    {coverImage && (
      <div class="md:flex-shrink-0 md:w-1/2">
        <a href={`/blog/${slug}`} class="block h-64 md:h-full">
          <img 
            src={coverImage} 
            alt={`Cover image for ${title}`} 
            class="w-full h-full object-cover"
          />
        </a>
      </div>
    )}
    
    <div class="p-8 md:p-10 md:w-1/2 flex flex-col justify-center">
      <div class="uppercase tracking-wide text-sm text-highlight font-semibold mb-1">Featured Post</div>
      
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {tags.slice(0, 3).map(tag => (
            <a href={`/topics/${tag}`} class="text-xs bg-tint-20 hover:bg-tint-50 text-dark-1 px-2 py-1 rounded-full transition">
              #{tag}
            </a>
          ))}
        </div>
      )}
      
      <h2 class="text-2xl md:text-3xl font-bold mb-4 text-black">
        <a href={`/blog/${slug}`} class="hover:text-primary transition">
          {title}
        </a>
      </h2>
      
      {description && (
        <p class="text-dark-2 mb-6 line-clamp-3 md:line-clamp-4">{description}</p>
      )}
      
      <div class="flex items-center justify-between text-sm text-dark-2 mb-6">
        <div class="flex items-center gap-2">
          {author?.image && (
            <img src={author.image} alt={author.name} class="w-8 h-8 rounded-full object-cover" />
          )}
          <span>{author?.name || 'Tech Blog Team'}</span>
        </div>
        
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
      </div>
      
      <a href={`/blog/${slug}`} class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-black bg-[#ffaa0c] hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ffaa0c] w-full md:w-auto">
        Read Article
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</article>