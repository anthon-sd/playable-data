---
const currentYear = new Date().getFullYear();
const companyName = "Playable Data Blog";

const footerLinks = [
  {
    title: "Content",
    links: [
      { name: "Blog", href: "/blog" },
      { name: "Topics", href: "/topics" }
    ]
  },
  {
    title: "Legal",
    links: [
      { name: "Privacy Policy", href: "/privacy" },
      { name: "Terms of Service", href: "/terms" }
    ]
  }
];

const socialLinks = [
  { name: "Discord", href: "https://discord.gg/m9YwpA2Xjd", icon: "discord" },
  { name: "LinkedIn", href: "https://linkedin.com", icon: "linkedin" }
];
---

<footer class="footer">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="col-span-1 lg:col-span-2">
        <div class="flex items-center">
          <span class="text-2xl font-bold text-black">{companyName}</span>
        </div>
        <p class="mt-4 text-black max-w-md">
          Expert technology insights and analysis to help professionals navigate the digital landscape.
        </p>
        <div class="mt-6 flex space-x-6">
          {socialLinks.map(social => (
            <a href={social.href} class="text-black hover:text-primary transition" target="_blank" rel="noopener noreferrer">
              <span class="sr-only">{social.name}</span>
              {social.icon === 'discord' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      {footerLinks.map(column => (
        <div>
          <h3 class="text-sm font-semibold text-black tracking-wider uppercase">{column.title}</h3>
          <ul class="mt-4 space-y-4">
            {column.links.map(link => (
              <li>
                <a href={link.href} class="text-base text-black hover:text-primary transition">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="mt-12 border-t border-gray-1 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-base text-black">
          &copy; {currentYear} {companyName}. All rights reserved.
        </p>
        <a href="/admin/login" class="text-sm text-black hover:text-primary transition mt-4 md:mt-0 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          Editor Login
        </a>
      </div>
    </div>
  </div>
</footer>